{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 450,
  "padding": 20,
  "title": { "text": "Correlation Between Median Age and Fertility Rate (2020)", "fontSize": 20, "color": "#2a363b" },
  "data": { "url": "data/population.csv" },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [null, "North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
        "labels": ["Show All", "North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum['Med Age'] != 'N/A' && datum['Fert Rate'] != 'N/A'"
    },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Med Age",
      "type": "quantitative",
      "title": "Median Age",
      "scale": {
        "domain": [12, 50]
      },
      "axis": {
        "tickCount": 7
      }
    },
    "y": {
      "field": "Fert Rate",
      "type": "quantitative",
      "title": "Fertility Rate",
      "scale": { "domain": [1, 7] },
      "axis": { "tickCount": 7 }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Niger' || datum['Country'] == 'United States' || datum['Country'] == 'Japan' || datum['Country'] == 'Nepal'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": { "type": "circle", "opacity": 1 },
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "Continent",
          "scale": {
            "domain": ["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],
            "range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#9dc183", "#a65628"]
          }
        },
        "size": {
          "field": "Yearly Change",
          "type": "quantitative",
          "condition": [
            {
              "test": "datum['Yearly Change'] >= 0",
              "value": 75
            },
            {
              "test": "datum['Yearly Change'] < 0",
              "value": 40
            }
          ],
          "bin": { "maxbins": 4 },
          "legend": {
            "values": [0],
            "title": "Population Growth (%)"
          }
        },
        "tooltip": [
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          { "field": "Country", "type": "nominal", "title": "Country" },
          { "field": "Med Age", "type": "quantitative", "title": "Median Age" },
          { "field": "Fert Rate", "type": "quantitative", "title": "Fertility Rate (%)" },
          { "field": "Yearly Change", "type": "quantitative", "title": "Population Growth (%)" }
        ]
      }
    }
  ]
}
