{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": { "view": { "stroke": "transparent" } },
  "width": "container",
  "height": 515,
  "padding": 20,
  "title": { "text": "Population Density by Country (2020)", "fontSize": 20, "color": "#2a363b" },
  "projection": { "type": "equirectangular" },
  "layer": [
    {
      "data": {
        "url": "js/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "lightblue" }
    },
    {
      "data": {
        "url": "js/world.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#a7a7a7" }
    },
    {
      "data": {
        "url": "js/world.json",
        "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.4 },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "data/population.csv"
            },
            "key": "Country",
            "fields": ["Density", "Population", "Continent"]
          }
        },
        {
          "filter": " datum['Density'] != 0"
        }
      ],
      "encoding": {
        "color": {
          "field": "Density",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "range": ["#fff7ec", "#fcd59e", "#fc8e59", "#d7301f", "#b3010", "#7f0000"],
            "bins": [1, 5, 20, 100, 4000]
          }
        },
        "tooltip": [
          {
            "field": "Continent",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Density",
            "type": "quantitative",
            "title": "Density (people / km^2)",
            "format": "~s"
          }
        ]
      }
    }
  ]
}
